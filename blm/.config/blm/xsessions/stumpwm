#!/usr/bin/env bash

# Add system defaults
if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for f in /etc/X11/xinit/xinitrc.d/*; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

# Merge user Xresources
[[ -f ~/.Xresources ]] && xrdb -display "$DISPLAY" -merge ~/.Xresources

feh --bg-scale "$HOME/Pictures/backgrounds/the_lair_by_allagar-dbjwdtg.jpg"
xsetroot -cursor_name left_ptr

# Disable dpms auto off
# xset -display "$DISPLAY" dpms 0 0 0
# xset -display "$DISPLAY" s 0 0

systemctl --user start unclutter@"$DISPLAY"
systemctl --user start dunst

# compton -CGb

eval `gnome-keyring-daemon --start --components=gpg,pkcs11,secrets,ssh`
export GNOME_KEYRING_CONTROL
export SSH_AUTH_SOCK
export GPG_AGENT_INFO
export GNOME_KEYRING_PID

export WM=stumpwm
export EDITOR=emacsclient

xset s off
xset b off

exec ssh-agent /usr/local/bin/stumpwm
