#!/usr/bin/env bash

# Add system defaults
if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for f in /etc/X11/xinit/xinitrc.d/*; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

# Merge user Xresources
[[ -f ~/.Xresources ]] && xrdb -display "$DISPLAY" -merge ~/.Xresources

# Disable dpms auto off
xset -display "$DISPLAY" dpms 0 0 0
xset -display "$DISPLAY" s 0 0

systemctl --user start unclutter@"$DISPLAY"

export WM=exwm
export EDITOR=emacsclient

feh --bg-scale "$HOME/Pictures/backgrounds/rainy_road.png"

xsetroot -cursor_name left_ptr

compton -CGb
#dunst &

exec emacs --wm
