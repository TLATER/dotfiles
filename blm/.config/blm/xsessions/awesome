#!/usr/bin/env bash

# Add system defaults
if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for f in /etc/X11/xinit/xinitrc.d/*; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

# Merge user Xresources
[[ -f ~/.Xresources ]] && xrdb -display $DISPLAY -merge ~/.Xresources

eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
export SSH_AUTH_SOCK

# Disable dpms auto off
xset -display $DISPLAY dpms 0 0 0
xset -display $DISPLAY s 0 0

xcompmgr &

exec awesome
