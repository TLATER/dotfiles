#!/usr/bin/env bash

set -eu

SCREENSHOT_HOME="${SCREENSHOT_HOME:-$HOME/Documents/Pictures/Screenshots}"

get-current-window() {
    local output
    output="$(xprop -root _NET_ACTIVE_WINDOW)"
    echo "${output:40}"
}

get-window-name() {
    local id="$1"
    local output
    output="$(xprop -id "${id}" WM_NAME)"
    # Sample output: `WM_NAME(STRING) = "emacs@yui"`
    echo "${output:19:-1}"
}

main() {
    local mode="-u"
    local name
    local window
    local filename

    window="$(get-current-window)"
    name="$(get-window-name "${window}")"

    while getopts "acs" option; do
        case "${option}" in
            a)
                mode="-a"
                ;;
            c)
                mode="-u"
                ;;
            s)
                mode="-s"
                ;;
            *)
                echo "Error: Invalid flag: ${option}"
                exit 1
        esac
    done

    sleep .1
    # `scrot` expands the filename in its own shell
    #shellcheck disable=SC2016
    filename=$(scrot "%FT%T.png" "${mode}" -e 'echo $f')
    mkdir -p "${SCREENSHOT_HOME}/${name}/"
    mv "${filename}" "${SCREENSHOT_HOME}/${name}/"
}

main "$@"
