@require "colors"

.all-comments
  &
  a
    color font_color
    background-color highlight

.display-message
  color font_color

.comments
  .comment-header
    .user-name
      color font_color
      font-weight bold
      background-color transparent
      &:hover
        text-decoration underline
    .time
      a
        color font_color_back

  .comment-replies-header
    color font_color

  .channel-owner .comment-header .user-name
    background-color highlight_back

  .comment-text
    .comment-text-content
      color font_color

  .comment-footer-action
  .separator
    color font_color

  .sprite_like
  .sprite_dislike
    recolor_black_png 100%

  .sprite_dislike_on
    -webkit-filter invert(100%) sepia(100%) saturate(200%) hue-rotate(-15deg) brightness(85%)

  .sprite_caret
    -webkit-filter invert(100%) sepia(100%) saturate(500%) hue-rotate(168deg) brightness(85%)

  .feedback-banner
    background-color highlight_back
    border-color highlight_back

  .paginator
    &
    &.activated
      color font_color
      background-image none
      background-color highlight
      border-color highlight_back
      &:hover
        background-image none
        background-color highlight_back
        border-color highlight_back

  b
    color font_visited
    font-weight bold

.action-panel
  &-loading
  &-error
    color font_color

// Read more overlay
.comment-text.long
  .comment-text-toggle
    height 100px
    position absolute
    width 85%
    bottom 27px
    background -webkit-linear-gradient(top, transparent 0%, highlight 85%)

    a
      bottom 0
      position absolute

  &.expanded
    .comment-text-toggle
      height auto
      position initial
      display inline
      background transparent
      bottom 0

      a
        position initial
