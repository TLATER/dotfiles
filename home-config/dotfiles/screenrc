# Set the window title to commands automagically
shelltitle "$ |nu"

# Bind the command key to C-o for emacs (and muscle memory) compatability
escape ^Oo

# Nethack!
nethack on

# Set the caption bars
caption always "%{bK}%n %{B}%t%="

# Scrollback
defscrollback 10000
compacthist on

# Enable 256 colors
term screen-256color
# This makes text blue instead of underline
attrcolor b ".I"
