defaults
auth            on
tls             on
tls_trust_file  /etc/ssl/certs/ca-certificates.crt

account         tlater.net
host            smtp.tlater.net
port            465
from            tm@tlater.net
user            tm@tlater.net
passwordeval    "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/msmtp/tm@tlater.net.gpg"
tls_trust_file
tls_certcheck   off
tls_starttls    off

account         gmail
host            smtp.gmail.com
port            587
from            tris.maat@gmail.com
user            tris.maat@gmail.com
passwordeval    "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/msmtp/Google.gpg"

account         kiara.at
host            smtp.kiara.at
port            465
from            tristan@kiara.at
user            tristan@kiara.at
passwordeval    "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.config/msmtp/tristan@kiara.at.gpg"
tls_trust_file
tls_certcheck   off
tls_starttls    off

account default: tlater.net
